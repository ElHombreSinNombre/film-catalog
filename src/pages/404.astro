---
import Layout from '../layouts/Layout.astro'
import BackBadge from '@components/badges/BackBadge.astro'
---

<Layout title='404 - Not Found'>
  <div
    class='borders bg-linear-to-br from-zinc-800 via-zinc-700 to-zinc-900 p-4 text-white max-w-md flex flex-col gap-3'
  >
    <header class='flex items-center gap-2'>
      <span class='text-2xl font-bold text-yellow-600'>404</span>
      <div class='h-6 w-px bg-white'></div>
      <h1 class='text-xl font-medium'>Page not found</h1>
    </header>
    <p>
      The movie or page you are looking for does not exist or has been moved to
      another section.
    </p>
    <div class='flex justify-start'>
      <BackBadge />
    </div>
  </div>
</Layout>
